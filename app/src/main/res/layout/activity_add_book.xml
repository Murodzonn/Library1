<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBook"
    android:gravity="center"
    android:layout_marginHorizontal="15dp">

    <TextView
        android:id="@+id/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить книгу"
        android:gravity="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/etAutor"
        android:layout_below="@id/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Автор"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_below="@id/etAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/horizontalList"
        android:layout_below="@id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/ivPicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/year_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="год"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/name_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название книги"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/description_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Краткое описание книги"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontalList"
        android:text="Добавить книгу"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
