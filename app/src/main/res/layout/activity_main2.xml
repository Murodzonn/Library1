<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBook"
    android:gravity="center"
    android:layout_marginHorizontal="15dp">

    <TextView
        android:id="@+id/txName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название книги"
        android:gravity="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/txAutor"
        android:layout_below="@id/txName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Автор"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/txYear"
        android:layout_below="@id/txAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Год"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:layout_below="@id/txYear"
        android:id="@+id/ivPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_below="@id/ivPicture"
        android:id="@+id/txOpis"
        android:hint="Описание"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@id/txOpis"
        android:id="@+id/btnDeleta"
        android:hint="Удалить"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






</RelativeLayout>
